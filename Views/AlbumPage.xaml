<Page
    x:Class="MPA.Views.AlbumPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MPA.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.UI.Xaml.Media.Animation"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="ItemBorderBrush" Color="#00000000" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Padding="40,24,40,16" Spacing="16">
            <!-- Music Title and Navigation -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Music Title and SelectorBar -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                    <TextBlock Text="Music" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    
                    <SelectorBar x:Name="NavigationSelector" 
                                 VerticalAlignment="Center"
                                 SelectionChanged="NavigationSelector_SelectionChanged">
                        <SelectorBarItem x:Name="SongsItem" Text="Songs"/>
                        <SelectorBarItem x:Name="AlbumsItem" Text="Albums" IsSelected="True"/>
                        <SelectorBarItem x:Name="ArtistsItem" Text="Artists"/>
                    </SelectorBar>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Content Frame -->
        <Frame x:Name="ContentFrame" Grid.Row="1" IsNavigationStackEnabled="False" />
    </Grid>
</Page>