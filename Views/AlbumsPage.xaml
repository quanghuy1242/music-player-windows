<Page
    x:Class="MPA.Views.AlbumsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MPA.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="ItemBorderBrush" Color="#00000000" />
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WindowStates">
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MoreButtonFilter.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="SortByPanel.Visibility" Value="Collapsed" />
                        <Setter Target="GenrePanel.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Action Bar with Shuffle button and Filters -->
        <Grid Grid.Row="0" Padding="40,24,40,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Shuffle and play button -->
            <Button Grid.Column="0" 
                    Style="{StaticResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE8B1;" FontSize="14"/>
                    <TextBlock Text="Shuffle and play" FontSize="14"/>
                </StackPanel>
            </Button>

            <!-- Filter Options -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        Spacing="16"
                        HorizontalAlignment="Right">
                <!-- More button -->
                <Button x:Name="MoreButtonFilter" Padding="8">
                    <FontIcon Glyph="&#xE712;" FontSize="14"/>
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutSubItem Text="Sort by">
                                <MenuFlyoutItem Text="Date added" />
                                <MenuFlyoutItem Text="Name" />
                                <MenuFlyoutItem Text="Artist" />
                                <MenuFlyoutItem Text="Year" />
                            </MenuFlyoutSubItem>
                            <MenuFlyoutSubItem Text="Genre">
                                <MenuFlyoutItem Text="All genres" />
                                <MenuFlyoutItem Text="Pop" />
                                <MenuFlyoutItem Text="Rock" />
                                <MenuFlyoutItem Text="Classical" />
                                <MenuFlyoutItem Text="Jazz" />
                                <MenuFlyoutItem Text="Electronic" />
                            </MenuFlyoutSubItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <!-- Sort by dropdown -->
                <StackPanel x:Name="SortByPanel" Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Sort by:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Opacity="0.7"/>
                    <ComboBox x:Name="SortByComboBox" 
                              SelectedIndex="0"
                              MinWidth="140"
                              Height="32">
                        <ComboBoxItem Content="Date added"/>
                        <ComboBoxItem Content="Name"/>
                        <ComboBoxItem Content="Artist"/>
                        <ComboBoxItem Content="Year"/>
                    </ComboBox>
                </StackPanel>

                <!-- Genre dropdown -->
                <StackPanel x:Name="GenrePanel" Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Genre:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Opacity="0.7"/>
                    <ComboBox x:Name="GenreComboBox" 
                              SelectedIndex="0"
                              MinWidth="140"
                              Height="32">
                        <ComboBoxItem Content="All genres"/>
                        <ComboBoxItem Content="Pop"/>
                        <ComboBoxItem Content="Rock"/>
                        <ComboBoxItem Content="Classical"/>
                        <ComboBoxItem Content="Jazz"/>
                        <ComboBoxItem Content="Electronic"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Album Grid -->
        <Grid Grid.Row="1" Padding="40,0,40,24">
            <GridView x:Name="AlbumGrid" ItemsSource="{Binding Albums}" IsItemClickEnabled="False" ContainerContentChanging="AlbumGrid_ContainerContentChanging">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" ItemHeight="250" MaximumRowsOrColumns="4"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>

                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Top" />
                        <Setter Property="Margin" Value="4" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GridViewItem">
                                    <Grid x:Name="LayoutRoot" 
                                          Background="Transparent">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal">
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" To="#00000000" Duration="0:0:0.10" />
                                                        <DoubleAnimation Storyboard.TargetName="PlayButton" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2" />
                                                        <DoubleAnimation Storyboard.TargetName="MoreButton" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2" />
                                                        <ColorAnimation Storyboard.TargetName="PlayButton" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="#40000000" Duration="0:0:0.2" />
                                                        <ColorAnimation Storyboard.TargetName="MoreButton" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="#40000000" Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </VisualState>

                                                <VisualState x:Name="PointerOver">
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" To="#3FFFFFFF" Duration="0:0:0.10" />
                                                        <DoubleAnimation Storyboard.TargetName="PlayButton" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2" />
                                                        <DoubleAnimation Storyboard.TargetName="MoreButton" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2" />
                                                        <ColorAnimation Storyboard.TargetName="PlayButton" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="#60000000" Duration="0:0:0.2" />
                                                        <ColorAnimation Storyboard.TargetName="MoreButton" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="#60000000" Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>

                                        <Border x:Name="RootBorder"
                                                BorderBrush="{StaticResource ItemBorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Padding="0"
                                                Background="Transparent">
                                            <Grid>
                                                <ContentPresenter />
                                                <!-- Play button - hidden by default, shown on hover -->
                                                <Button x:Name="PlayButton"
                                                        Background="#40000000" 
                                                        CornerRadius="18" 
                                                        Width="36" 
                                                        Height="36" 
                                                        HorizontalAlignment="Left" 
                                                        VerticalAlignment="Top" 
                                                        Margin="14,140,0,0"
                                                        Opacity="0"
                                                        Padding="0"
                                                        BorderBrush="Transparent"
                                                        Click="PlayButton_Click">
                                                    <Viewbox Stretch="Uniform" Width="15" Height="15">
                                                        <SymbolIcon Symbol="Play" Foreground="White"/>
                                                    </Viewbox>
                                                </Button>

                                                <!-- More button - hidden by default, shown on hover -->
                                                <Button x:Name="MoreButton"
                                                        Background="#40000000" 
                                                        CornerRadius="18" 
                                                        Width="36" 
                                                        Height="36" 
                                                        HorizontalAlignment="Right" 
                                                        VerticalAlignment="Top" 
                                                        Margin="0,140,14,0"
                                                        Opacity="0"
                                                        Padding="0"
                                                        BorderBrush="Transparent">
                                                    <Viewbox Stretch="Uniform" Width="15" Height="15">
                                                        <SymbolIcon Symbol="More" Foreground="White"/>
                                                    </Viewbox>
                                                    <Button.Flyout>
                                                        <MenuFlyout>
                                                            <MenuFlyoutItem Text="Play album" />
                                                            <MenuFlyoutItem Text="Add to queue" />
                                                            <MenuFlyoutItem Text="Add to playlist" />
                                                            <MenuFlyoutItem Text="View artist" />
                                                        </MenuFlyout>
                                                    </Button.Flyout>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </GridView.ItemContainerStyle>

                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="local:Album">
                        <StackPanel Padding="6" Width="192">
                            <!-- Album art area -->
                            <Grid>
                                <Border Background="#1A1A1A"
                                        BorderBrush="#2A2A2A"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Width="180"
                                        Height="180"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top">
                                    <Grid>
                                        <!-- Fallback icon when no image -->
                                        <Viewbox x:Name="FallbackIcon" 
                                                 Stretch="Uniform" 
                                                 HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center" 
                                                 Margin="40">
                                            <SymbolIcon Symbol="MusicInfo" Foreground="#3A3A3A"/>
                                        </Viewbox>

                                        <!-- Album cover image -->
                                        <Image x:Name="AlbumImage" Stretch="UniformToFill" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               Tag="{Binding ImageUrl}"
                                               ImageOpened="Image_ImageOpened"
                                               ImageFailed="Image_ImageFailed">
                                        </Image>

                                        <!-- subtle dark overlay -->
                                        <Border Background="#20000000" CornerRadius="8" />
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Title and subtitle -->
                            <TextBlock Text="{Binding Title}" 
                                       FontWeight="SemiBold" 
                                       FontSize="14" 
                                       Margin="0,8,0,0" 
                                       Foreground="White"
                                       TextTrimming="CharacterEllipsis"
                                       MaxLines="1"
                                       Width="180"/>
                            <TextBlock Text="{Binding Subtitle}" 
                                       FontSize="13" 
                                       Opacity="0.6" 
                                       Margin="0,2,0,0" 
                                       Foreground="White"
                                       TextTrimming="CharacterEllipsis"
                                       MaxLines="1"
                                       Width="180"/>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>
    </Grid>
</Page>